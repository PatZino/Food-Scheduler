@model IEnumerable<FoodPlanner.Models.GrainDishes.GrainDish>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layoutkazz.cshtml";
    int i = 1;
}
    <div class="content-wrapper">
    
            <div class="card">
                
                <!-- /.card-header -->
                <div class="card-body">
                    <p>
                        <a asp-action="Create" class="btn btn-primary btn-sm">Add grain dish</a>
                    </p>

                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        
    </div>
                <!-- /.col -->
            @*</div>
        </div>    /.row 
    </section>*@
    <!-- /.content -->



<script>
        $(function () {
            $("#example1").DataTable();
